func TestScanDesc(t *testing.T) {
	ScanDesc("1970-01-01 00:00:01", util.TimeFormat(time.Now(), util.FMT_DATE_TIME), func(articles []Article) {
		for _, article := range articles {
			t.Log(article)
		}
	})
}
